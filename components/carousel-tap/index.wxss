.image_group{
  /* display:flex; */
  display: block;
  white-space: nowrap;
  height:400rpx;
  /* padding:0 20rpx; */
}

.image_wrapper{
  display:inline-block;
  position: relative;
  /* background-color:green; */
  width:90%;
  
  margin:0 10rpx;
  font-size:0;
  /* padding:20rpx; */
}

.image_group .image_wrapper:last-child{
  margin-right:30rpx;
}
.image_group .image_wrapper:first-child{
  margin-left:30rpx;
}

.image_wrapper text{
  position: absolute;
  color:#fff;
}

.image_wrapper image{
  width:100%;
  height:400rpx;
  /* margin:0 30rpx; */
}